= form_for(@ticket) do |f| 
  - if @ticket.errors.any?
    #error_explanation
      %h2
        #{ pluralize(@ticket.errors.count, "error") } prohibited this ticket from being saved:

      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li
            = msg

  .field
    = f.label :reporter_name
    = f.text_field :reporter_name

  .field
    = f.label :reporter_email
    = f.text_field :reporter_email

  .field
    = label_tag :department, 'Status'
    = select_tag :department, options_from_collection_for_select(Department.all, 'url_key', 'title')

  .field
    = f.label :title
    = f.text_field :title

  .field
    = f.label :body
    = f.text_area :body

  .actions
    = f.submit